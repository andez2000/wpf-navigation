      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:acme.wpfapp.Pages"
      xmlns:vm="clr-namespace:acme.wpfapp.ViewModels"
      mc:Ignorable="d"
      Title="PageWithSimpleVM" Height="450" Width="800">
    <Page.DataContext>
        <vm:SimpleVM></vm:SimpleVM>
    </Page.DataContext>
    <StackPanel Background="Teal">
        <Label>
            Hello from Page Simple VM
        </Label>
        
        <Label Content="{Binding Path=Message}"></Label>
    </StackPanel>
    
</Page>
